@section Scripts {
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/travel.js"></script>
    <script>
        function createCard(spot) {
            const card = document.createElement('div');
            card.className = 'card';
            card.style.width = '18rem';

            const img = document.createElement('img');
            img.className = 'card-img-top h-500';
            img.src = spot.file.img[0].text;

            const cardBody = document.createElement('div');
            cardBody.className = 'card-body';
            const cardstitle = document.createElement('div');
            cardstitle.className = 'card-stitle';
            cardstitle.innerText = spot.stitle;
            const cardRowNumber = document.createElement('div');
            cardRowNumber.className = 'card-RowNumber';
            cardRowNumber.innerText = spot.RowNumber;
            const cardSERIAL_NO = document.createElement('div');
            cardSERIAL_NO.className = 'card-SERIAL_NO';
            cardSERIAL_NO.innerText = spot.SERIAL_NO;
            const cardMEMO_TIME = document.createElement('div');
            cardMEMO_TIME.className = 'card-MEMO_TIME';
            cardMEMO_TIME.innerText = spot.MEMO_TIME;
            const cardxpostDate = document.createElement('div');
            cardxpostDate.className = 'card-xpostDate';
            cardxpostDate.innerText = spot.xpostDate;
            const cardavBegin = document.createElement('div');
            cardavBegin.className = 'card-avBegin';
            cardavBegin.innerText = spot.avBegin;
            const cardavEnd = document.createElement('div');
            cardavEnd.className = 'card-avEnd';
            cardavEnd.innerText = spot.avEnd;
            const cardCAT1 = document.createElement('div');
            cardCAT1.className = 'card-CAT1';
            cardCAT1.innerText = spot.CAT1;
            const cardCAT2 = document.createElement('div');
            cardCAT2.className = 'card-CAT2';
            cardCAT2.innerText = spot.CAT2;
            const cardText = document.createElement('div');
            cardText.className = 'card-text';
            cardText.innerText = spot.xbody;
            cardBody.appendChild(cardRowNumber);
            cardBody.appendChild(cardstitle);
            cardBody.appendChild(cardavBegin);
            cardBody.appendChild(cardxpostDate);
            cardBody.appendChild(cardSERIAL_NO);
            cardBody.appendChild(cardCAT1);
            cardBody.appendChild(cardCAT2);
            cardBody.appendChild(cardMEMO_TIME);
            cardBody.appendChild(cardText);
            card.appendChild(img);
            card.appendChild(cardBody);

            return card;
        }

        const cardContainer = document.getElementById('cardContainer');

        for (const spot of spots.CommonFormat.Section) {
            const card = createCard(spot);
            cardContainer.appendChild(card);
        }
    </script>
}