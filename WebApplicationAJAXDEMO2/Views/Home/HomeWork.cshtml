@section Styles {

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .card-text {
            overflow: hidden;
            text-overflow: ellipsis;
            /* ellipsis超出的變成省略 */
            -webkit-box-orient: vertical;
        }

        .card-body {
            height:300px;
        }

        .m-10 > {
            margin:10px;
        }
        img{
            height:10em;
        }
    </style>
}
@{
    ViewData["Title"] = "HomeWork";
}


